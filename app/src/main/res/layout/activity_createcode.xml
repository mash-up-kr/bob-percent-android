<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    >

    <com.mash.pig.bobpercent.app.widget.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/code_txt_generate"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        />

    <com.mash.pig.bobpercent.app.widget.FontButton
        android:id="@+id/btn_createcode_send_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:text="@string/code_txt_send"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_round_grey"
        />

    <EditText
        android:id="@+id/myCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:background="@drawable/shape_round_grey_stroke"
        android:hint="@string/code_hint_your_code"
        android:textColorHint="#cccccc" />

    <com.mash.pig.bobpercent.app.widget.FontButton
        android:id="@+id/btn_createcode_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_round_grey"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:onClick="onClickNext"
        android:text="Next"
        android:textColor="@android:color/white"
        />

</LinearLayout>